

<div id="current-user-row" class="row">
    <h2> <small>click-></small> <div id="current-user" class="label label-primary" ><%=@current_user.name%> </div></h2>
</div>
<div id="change-name-row" class="row hide">
    <h2>  <small>enter-></small><form id="change-name-form" class="navbar-form label label-primary" data-remote="true" role="search">
        <div class="form-group">
            <input id="new-name" name="username" type="text" class="form-control" placeholder="<%=@current_user.name%>">
        </div>
        <!--<button id="change-name" type="submit" class="btn btn-default hidden">Change Name</button>-->
    </form></h2>
</div>
<ul id="user-list" class="list-group">
    <% @users.each do |user|%>
    <li class="list-group-item" data-user-id="<%=user.id%>"><%= user.name%></li>
    <%end%>
</ul>


<script id="entry-template" type="text/x-handlebars-template">
    <li class="list-group-item" data-user-id="{{user_id}}">{{</li>
</script>