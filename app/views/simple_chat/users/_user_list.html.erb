
<div id="current-user" ><%=@current_user.name%> </div>
<form id="change-name-form" class="navbar-form navbar-left" data-remote="true" role="search">
    <div class="form-group">
        <input id="new-name" type="text" class="form-control" placeholder="<%=@current_user.name%>">
    </div>
    <button id="change-name" type="submit" class="btn btn-default">Change Name</button>
</form>

<ul id="user-list" class="list-group">
    <% @users.each do |user|%>
    <li class="list-group-item"><%= user.name%></li>
    <%end%>
</ul>